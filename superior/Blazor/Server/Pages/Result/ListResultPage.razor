@page "/result/list"
@inject IJSRuntime JS
@inject NavigationManager NavManager
@using E_Voting.Transfer
@using System.Text.Json

<PageTitle>Results</PageTitle>

@if(election == null)
{
    return;
}

<div id="resultsDiv" >
    <div class="logo-header-div">
    <h1>
        Result
    </h1>
    <img src="logo.png" alt="Superior Voting Logo" />
</div>

<div class="listing-div">
    @if (election!.Result == Config.EmptyResult)
    {
        @if(election!.End < DateTime.UtcNow)
        {
            <p>Calculating result...</p>
        }
        else if (browserTimeZone != String.Empty)
        {
            <p>Election not finished</p>
            <p>End time: @election.End.AddHours(browserTimeZoneOffset).ToString("dd.MM.yyyy HH:mm") (@browserTimeZone)</p>     
        }
    }
    else
    {
        <h3>@election.Name</h3>
        <p><strong>Voting System:</strong> @Help.GetSystemName(Help.GetVotingSystem(election.TypeID))</p>

        <div class="bar-chart">
            @if (!mobile)
            {
                @for(int i = 0; i < result.Count; i++)
                {
                    <div class="bar-container">
                        <span class="bar-label">@ResultFormater(@result[i].Item1) (@result[i].Item2)</span>
                        <div class="bar" style="width:@(displayResult[i])px"></div>
                    </div>
                }
            }
        </div>

        <table class="table-main">
            <thead>
                <tr>
                    <th>Candidate</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Tuple<string, string> element in result)
                {
                    @if(mobile)
                    {
                        <tr>
                            <td>@ResultFormater(@element.Item1)</td>
                            <td>@element.Item2</td>
                        </tr>                             
                    }
                    else
                    {
                        <tr>
                            <td>@element.Item1</td>
                            <td>@element.Item2</td>
                        </tr>       
                    }
                }
            </tbody>
        </table>
    }
</div>
</div>
@if (election!.Result != Config.EmptyResult)
{
    <div class="listing-div">
        <button class="btn-main" @onclick="TakeScreenshot">Save result</button>
    </div>
}
<br>
<br />

<style>
.bar-chart {
    margin: 20px 0;
    max-width: 600px;
}

.bar-container {
    display: flex;
    align-items: center;
    margin-bottom: 4px;
    flex-wrap: nowrap;
}

.bar-label {
    width: 150px;
    margin-right: 10px;
    flex-wrap: nowrap;
}

.bar {
    height: 24px;
    background-color: #3399ff;
    max-width: 100%;
}
</style>

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string ElectionID { get; set; } = "";

    [Parameter]
    [SupplyParameterFromQuery]
    public string Token { get; set; } = "";

    private Voter? voter;
    private Election? election;
    private List<Tuple<string, string>> result = new();
    private List<int> displayResult = new();
    private string browserTimeZone = String.Empty;
    private int browserTimeZoneOffset = 0;
    private bool mobile = true;

    private async Task TakeScreenshot()
    {
        try
        {
            await JS.InvokeVoidAsync("takeScreenshot");   
        }
        catch(Exception e)
        {
            Log.Write("Taking screenshot failed: " + e.Message);
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            int browserWidth = await JS.InvokeAsync<int>("browserUtils.getWindowWidth");
            mobile = browserWidth < 800;

            browserTimeZone = await JS.InvokeAsync<string>("getBrowserTimeZone");
            browserTimeZoneOffset = await JS.InvokeAsync<int>("getBrowserUtcOffset");
            StateHasChanged();
        }
    }

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(Token))
        {
            NavManager.NavigateTo(Routes.InvalidRequest);
            return;
        }
        if (string.IsNullOrEmpty(ElectionID))
        {
            NavManager.NavigateTo(Routes.InvalidRequest);
            return;
        }
        if(!long.TryParse(ElectionID, out long id))
        {
            NavManager.NavigateTo(Routes.InvalidRequest);
            return;
        }

        if (Token == "public")
        {
            election = Database.GetElection(id, false, PrivacyLevel.Voters);
            if (election != null && election.PublicElection)
            {
                if(election.Result != Config.EmptyResult)
                {
                    VotingSystem system =  Help.GetVotingSystem(election.TypeID);
                    if (!Help.IsListResultElection(system))
                    {
                        election = null;
                        NavManager.NavigateTo(Routes.InvalidRequest);
                        return;
                    }
                    LoadResult();
                    return;   
                }
                return;
            }
            else
            {
                election = null;
                NavManager.NavigateTo(Routes.InvalidRequest);
                return;
            }
        }
        else
        {
            if (Token.Length == Config.VoterTokenLength)
            {
                voter = Database.CheckToken(Token);
                if (voter != null && voter.ElectionID == id)
                {
                    election = Database.GetElection(id, false, PrivacyLevel.Voters);
                    if(election == null)
                    {
                        voter = null;
                        NavManager.NavigateTo(Routes.InvalidToken);
                        return;
                    }
                }
                else
                {
                    voter = null;
                    NavManager.NavigateTo(Routes.InvalidToken);
                    return;
                }
            }
            else if (Token.Length == Config.AdminTokenLength)
            {
                election = Database.CheckAdminToken(Token);
                if(election == null)
                {
                    NavManager.NavigateTo(Routes.InvalidToken);
                    return;
                }
                if(election.ID != id)
                {
                    election = null;
                    NavManager.NavigateTo(Routes.InvalidToken);
                    return;
                }
            }
            else
            {
                NavManager.NavigateTo(Routes.InvalidToken);
                return;
            }

            if (election.Result != Config.EmptyResult)
            {
                VotingSystem system = Help.GetVotingSystem(election.TypeID);
                if (!Help.IsListResultElection(system))
                {
                    election = null;
                    NavManager.NavigateTo(Routes.ServerError);
                    return;
                }
                LoadResult();
                return;
            }
        }
    }

    private string ResultFormater(string name)
    {
        if(name.Length <= 12)
        {
            return name;
        }

        return name.Substring(0, 10) + "...";
    }

    private void LoadResult()
    {
        Dictionary<long, int>? resultData = JsonSerializer.Deserialize<Dictionary<long, int>>(election!.Result);
        if (resultData != null)
        {
            foreach (var entry in resultData.OrderByDescending(e => e.Value)!)
            {
                foreach (Candidate candidate in election.Candidates)
                {
                    if (candidate.ID == entry.Key)
                    {
                        result.Add(new Tuple<string, string>(candidate.Name, entry.Value.ToString()));
                    }
                }
            }
        }

        // Standardize bars relative to the max score
        if (result.Any())
        {
            int maxScore = result.Max(r => int.Parse(r.Item2));
            foreach(Tuple<string, string> element in result)
            {
                int value = (int)((Convert.ToDouble(element.Item2) / maxScore) * 400);
                if(value < 1)
                {
                    value = 1;
                }
                displayResult.Add(value);
            }
        }
    }
}
